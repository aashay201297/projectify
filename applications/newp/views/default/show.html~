{{extend 'layout.html'}}
<script>
function like(type) {
$.get("{{=URL('like_image.json', args=request.args)}}/" + type, function
(data) {
$("#like1").html(data.like1);
$("#like2").html(data.like2);
$("#like3").html(data.like3);
$("#like4").html(data.like4);
$("#like5").html(data.like5);
$("#totlik").html(data.totlik);
});
}
</script>
<script>
function toexec() {
  $.get('{{=URL("like_count.json", args=request.args)}}', function (data) {
    console.log(data)
    console.log(data.like1)
  })
}

toexec()
</script>

